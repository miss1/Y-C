/* miniprogram/pages/home/index.wxss */
.block-swiper{
  width: 100%;
  height: 30%;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.footer{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
.items{
  box-shadow:0px 3px 5px 0px rgba(65,65,65,0.2);
  border-radius:5px;
}
.item-all{
  width: 90%;
  height: 25%;
  position: relative;
  display: flex;
  align-items: center;
  margin: 40rpx auto 0 auto;
}
.eating image{
  width: 280rpx;
  height: 280rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border-bottom-left-radius: 5px;
}
.eating text{
  padding-left: 300rpx;
}
.item-block{
  justify-content: space-between;
}
.item-half{
  width: 47%;
  height: 100%;
  text-align: center;
}
.item-half image{
  width: 75%;
  height: 75%;
}
.item-half text{
  display: block;
}